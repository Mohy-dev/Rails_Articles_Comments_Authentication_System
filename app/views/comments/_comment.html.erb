<% unless comment.archived? %>
<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<p>
  <%= button_to 'Delete', [comment.article, comment],
                method: :delete,
                data: { confirm: "Are you sure?" } %>
</p>

<%= link_to "All Articles", new_article_path %>
<% end %>
